
<div class="photo_wrapper">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <div class="artist_box">
        <div class="artist_text">
            <h1>Who is really: <%= @artist.band_name.capitalize %>?</h1>
            <p><%= @artist.description %></p>
        </div>
        <div class="artist_avatar">
          <%= artist_avatar @artist.photo_url %>
        </div>
        <div class="button_box">
          <div class="book_now">
            <%= link_to "Book now!", new_artist_booking_path(@artist), class: 'btn btn-flat' %>
          </div>
          <div class="back_to_all_artists">
            <%= link_to "Back to all artists", root_path, class: 'btn btn-ghost' %>
          </div>
          <div class="add_review">
            <%= link_to "Add a review!", root_path,class: 'btn btn-flat'%> 
            <%# change root_path to review_path %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="artist_box">
        <h1>Galery</h1>
        <%= youtube_video @artist.music_url %>
      </div>
    </div>
  </div>

