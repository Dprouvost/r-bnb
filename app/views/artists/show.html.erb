
<div class="photo_wrapper" 
  style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.2)50%), url(<%= @artist.photo_url %>);">
  
  <div class="artist_box">
    <h1><%= @artist.band_name.upcase %></h1>
    <p><%= @artist.description %></p>
    <br>
    <%= link_to "Book now!", root_path, class: 'btn btn-flat' %>
    <br>
    <%= link_to "Back to all artists", root_path %>
  </div>
  

  <div class="tv_box">
    <a href= '@artist.music_url'></a>
  </div>


  <div class="stats_box">
    <div class="col-sm-12 col-md-6">
        <table class="table table-bordered">
          <tbody>
            <thead>
              <th>Category:</th>
              <th>Price:</th>
              <th>Location:</th>
              <th>Travel:</th>
            </thead>
              <tr>
                <td><%= @artist.category.name %></td>
                <td><%= @artist.price %>â‚¬</td>
                <td><%= @artist.location %></td>
                <td><%= @artist.area_range %>km</td>
              </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>